{
  "name": "@renewal/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env.local src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=../../.env.local src/db/seed.ts",
    "db:seed:production": "tsx --env-file=../../.env.local src/db/seed-production.ts",
    "db:create-admin": "tsx --env-file=../../.env.local src/db/create-admin.ts",
    "db:fix-rates": "tsx --env-file=../../.env.local src/db/fix-rate-effective-dates.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@renewal/types": "workspace:*",
    "@vercel/blob": "^0.27.1",
    "@vercel/postgres": "^0.10.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.17.2",
    "pino": "^10.3.0",
    "postmark": "^4.0.5",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/decimal.js": "^0.0.32",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.9"
  }
}
